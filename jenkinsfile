pipeline {
    agent any

    tools {nodejs "Node 13.1.0"}

    environment {
        CHROME_BIN = '/bin/google-chrome'
    }

    stages {
        stage('Dependencies') {
            steps {
                sh 'npm i'
            }
        }
        stage('e2e Tests') {
            steps {
                sh 'npm run cy:run'
            }
        }

    }
}
